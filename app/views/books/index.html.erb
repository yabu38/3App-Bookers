<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>title</td>
        <td>body</td>
        <td>Show</td>
        <td>Edit</td>
        <td>Destroy</td>
      </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Body</label>
  <%= f.text_area :body %>
  <% f.submit 'Create Book' %>
<% end %>