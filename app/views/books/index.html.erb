<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>title</td>
      <td>body</td>
      <td>Show</td>
      <td>Edit</td>
      <td>Destroy</td>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
<div class="field">
  <label>Title</label>
  <div class="field-title">
    <%= f.text_field :title %>
  </div>
</div>
<div class="field">
  <label>Body</label>
  <div class="field-body">
    <%= f.text_area :body %>
  </div>
</div>
<div class="actions">
  <%= f.submit 'Create Book' %>
</div>
<% end %>